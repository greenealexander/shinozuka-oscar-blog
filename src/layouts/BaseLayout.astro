---
import Drawer from '../components/Drawer/index.astro';
import MainHead from '../components/MainHead.astro';

const { title, description, containerClass } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<MainHead title={title} description={description ?? 'some description'} />
	</head>

	<body>
		<Drawer title={title}>
			<main class={containerClass ?? `container mx-auto p-2 px-4`}>
				<slot />
			</main>

			<footer class='flex flex-col sm:flex-row items-center justify-center pt-32 pb-16'>
				<span>© Copyright © 2022 Shinozuka Oscar</span> 
				<span class="hidden whitespace-pre-line sm:inline-block">&nbsp;-&nbsp;</span> 
				<span>All Rights Reserved.</span>
			</footer>
		</Drawer>
	</body>
</html>