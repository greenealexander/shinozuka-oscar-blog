---
import BaseLayout from '../layouts/BaseLayout.astro';

const posts = await Astro.glob('./blog/*.md');
---

<BaseLayout title='Blog'>
	<section>
		<h2 class='mb-12 text-4xl font-semibold'>
			Latest
		</h2>

		<div class='grid grid-rows-3 grid-cols-1 gap-16 lg:grid-rows-1 lg:grid-cols-3'>
			{posts.map((post, i) => (
				<a href={post.url} class='flex overflow-hidden'>
					<div class='overflow-hidden lg:w-2/3 mr-8'>
						<img src={`/images/book-image-${i + 1}.jpg`} alt={`Book ${i + 1}`} class='w-full h-full object-cover'>
					</div>

					<div class='flex flex-col'>
						<span class='uppercase font-medium mb-3'>{post.frontmatter.date}</span>

						<h3 class='text-lg lg:text-2xl text-ellipsis'>Enfant d'chienne de Jésus Marie Joseph de charogne de colon de maudit de crucifix de gériboire.</h3>
					</div>
				</a>
			))}
		</div>
	</section>
</BaseLayout>
